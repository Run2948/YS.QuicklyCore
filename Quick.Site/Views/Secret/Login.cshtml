<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>登录 - 一世计科</title>
    <environment include="Development">
        <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
        <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
        <link href="~/lib/Ionicons/css/ionicons.css" rel="stylesheet" />
        <link href="~/css/template/AdminLTE.css" rel="stylesheet" />
        <link href="~/css/template/green.css" rel="stylesheet" />
        <link href="~/css/view/login.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="https://cdn.bootcss.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute">
        <link href="https://cdn.bootcss.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"
              asp-fallback-href="~/lib/font-awesome/css/font-awesome.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute">
        <link href="http://cdn.bootcss.com/ionicons/2.0.1/css/ionicons.min.css" rel="stylesheet"
              asp-fallback-href="~/lib/Ionicons/css/ionicons.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link href="~/css/view/login.min.css" rel="stylesheet" asp-append-version="true" />
    </environment>
</head>
<body class="hold-transition" style="height:80%;">
    <div class="login-box">
        <div class="login-box-body">
            <div class="login-logo">
                <i class="fa fa-leaf text-green"></i>
                <b style="font-family:KaiTi">
                    一世计科
                    <sub style="font-family:Consolas">Yishi</sub>
                </b>
            </div>
            <p class="login-box-msg">欢迎使用 <a href="javascript:void(0)"><b>一世计科</b></a> .Net Core快速开发系统</p>
            <form asp-controller="Secret" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" id="loginform">
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" asp-for="Account" placeholder="请输入账户名">
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" asp-for="Password" placeholder="请输入密码">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                @*<div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe">
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
            </div>*@
                <div class="social-auth-links text-center" style="margin:30px 0px;">
                    <button id="btnLogin" type="submit" class="btn btn-success btn-block btn-flat">
                        <i class="fa fa-sign-in"></i> 登录
                    </button>
                </div>
                <input id="errorInfo" type="hidden" value="@ViewBag.ErrorInfo" />
            </form>
        </div>
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/template/icheck.js"></script>
        <script src="~/js/template/jquery.cookie.js"></script>
        <script src="~/js/template/layer.js"></script>
        <script src="~/js/view/login.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdn.bootcss.com/jquery/2.2.4/jquery.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js">
        </script>
        <script src="https://cdn.bootcss.com/bootstrap/3.3.6/js/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js">
        </script>
        <script src="https://cdn.bootcss.com/iCheck/1.0.1/icheck.min.js"
                asp-fallback-src="~/js/template/icheck.min.js">
        </script>
        <script src="~/js/view/login.min.js" asp-append-version="true"></script>
    </environment>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }

</body>
</html>


